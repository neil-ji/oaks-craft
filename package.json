{
  "name": "oaks-craft",
  "private": false,
  "description": "Oaks Craft 是一个开发中的渐进式博客引擎，目的是简单易用，且支持扩展。",
  "author": "Neil Ji",
  "license": "MIT",
  "keywords": [
    "Oaks Craft",
    "progressive",
    "blog engine",
    "development",
    "easy to use",
    "extensible"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neil-ji/oaks-craft.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:dev": "webpack --config webpack.config.ts --mode development",
    "build": "webpack --config webpack.config.ts --mode production",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=21.6.1",
    "npm": ">=10.2.4"
  },
  "subModules": [
    {
      "name": "oaks-model",
      "version": "0.0.1"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/node": "^20.12.12",
    "@types/semver": "^7.5.8",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.3.0",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "semver": "^7.6.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  }
}
